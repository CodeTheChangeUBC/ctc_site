<% provide(:title, 'Edit Project') %>


<div class="container-fluid create-project">
	<h2 class="center">Edit project.</h2>
	<div class="col-md-6 col-md-offset-3">
	    <%= form_for(@project) do |f| %>
	      <%= render 'shared/error_messages', object: @project %>
	      <%= f.label :title %>
	      <%= f.text_field :title %>
	      <%= f.label :gitHub_url%>
	      <p><small>Please enter full URL (e.g. https://imawesome.com)</small></p>
	      <%= f.text_field :githubPage  %>
	      <%= f.label :status %>
	      <%= f.text_field :status %>
	      <%= f.label :project_url %>
	      <p><small>(If project has a home on the web)</small></p>
	      <%= f.text_field :project_url %>
	      <%= f.label :description %>
	      <%= f.text_area :description, rows: "10" %>
	      <p id="mkdown"><small><%= markdown('Formatting: \*\***bold**\*\*  \__italics_\_  `` `code` `` \> block quote ')%></small></p>
	      <strong>Change Picture:</strong><%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', id: 'uploader' %>
	      <%= f.submit "Edit Project", class: "btn btn-primary" %>
	    <% end %>
	</div>
</div>



