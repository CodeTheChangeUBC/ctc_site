<!-- HOMEPAGE CONTENT -->
<div id="homepage-content-wrapper">

  <!-- Intro Section -->
  <div id="homepage-intro">
    <div class="foreground">
      <div class="gradient"></div>

      <div id="homepage-intro-content">
        <div id="intro-logo">
          <%= image_tag('ctc-transparent.gif') %>
        </div>

        <div id="intro-text">
          <h3>
            Empowering non-profits through open source software. </br>
            <span id="intro-arrow" class="glyphicon glyphicon-chevron-down" rel="2500"></span>
          </h3>
        </div>
      </div>
    </div>
  </div>

  <!-- About section -->
  <div id="homepage-about" class="container-fluid">
    <div class="row">
      <div id="about-title" class="fade-in1">
        <h1>Learn More</h1>
        <hr>
      </div>

      <div class="col-xs-offset-1 col-xs-10">
        <div class="col-md-4 fade-in1">
          <div class="about-box">
            <div id="tile1">
            </div>
            <%= link_to 'About', about_path, class: 'btn about-btn' %>
          </div>
        </div>hide

        <div class="col-md-4 fade-in1">
          <div class="about-box">
            <div id="tile2">
            </div>
            <%= link_to 'The Team', members_path, class: 'btn about-btn' %>
          </div>
        </div>

        <div class="col-md-4 fade-in1">
          <div class="about-box">
            <div id="tile3">
            </div>
            <%= link_to 'Projects', projects_path, class: 'btn about-btn' %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Contact section -->
  <div id="homepage-contact">
    <h1>Interested?</h1>
    <button class="btn contact-btn"> Contact Us </button>
    <h3 id="hide"><a href="mailto:codethechangeubc@gmail.com">codethechangeubc@gmail.com</a> </h3>
  </div>
</div>