                        <% end %>
                        <% if logged_in? %>
                            <li class="member-name"><div class="link"><%= link_to 'Edit account', edit_member_path(current_member) %></div></li>
                        <% else %>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </header>
