<% provide(:title, 'Upcoming Projects') %>

<div class='container posts-index'>
	<h2 class='center'>Upcoming Projects</h2>
	<p class='center'>
	<% if admin? %>
		<%= link_to "Create New Post", new_post_path %> 
	<% end %>
	</p>
	<% if @posts.empty? %>
		<h3 class='center no-projects'>There are no upcoming projects. Please check back soon! </h3>
	<% end %>
	<div class='col-sm-10 col-sm-offset-1 posts-list'>
		<%= render @posts %>
	</div>
</div>